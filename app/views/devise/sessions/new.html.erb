<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-50 to-indigo-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full bg-white rounded-2xl shadow-lg p-8 ring-1 ring-gray-100">
    <div class="text-center mb-6">
      <%# Optional logo: replace or remove the image tag if you don't have an asset named logo.png %>
      <%= link_to root_path, class: "inline-block" do %>
        <% if asset_exists?("logo.png") %>
          <%= image_tag 'logo.png', alt: 'Logo', class: 'h-12 w-auto mx-auto mb-3' %>
        <% else %>
          <span class="sr-only">Home</span>
        <% end %>
      <% end %>

      <h2 class="text-2xl font-semibold text-gray-800">Sign in to your account</h2>
      <p class="text-sm text-gray-500 mt-1">Welcome back — enter your details to continue</p>
    </div>

    <% if flash[:alert].present? || flash[:notice].present? %>
      <div class="mb-4">
        <% if flash[:alert].present? %>
          <div class="text-sm text-red-700 bg-red-50 border border-red-100 rounded-md p-3"><%= flash[:alert] %></div>
        <% end %>
        <% if flash[:notice].present? %>
          <div class="text-sm text-indigo-700 bg-indigo-50 border border-indigo-100 rounded-md p-3"><%= flash[:notice] %></div>
        <% end %>
      </div>
    <% end %>

    <% if resource && resource.errors.any? %>
      <div class="mb-4">
        <div class="text-sm text-red-700 bg-red-50 border border-red-100 rounded-md p-3">
          <ul class="list-disc list-inside">
            <% resource.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), local: true, class: "space-y-4") do |f| %>
      <div>
        <label for="email" class="sr-only">Email</label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "email", placeholder: "Email address", class: "appearance-none block w-full px-4 py-3 border border-gray-200 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-300 focus:border-indigo-300 text-sm" %>
      </div>

      <div>
        <label for="password" class="sr-only">Password</label>
        <%= f.password_field :password, autocomplete: "current-password", id: "password", placeholder: "Password", class: "appearance-none block w-full px-4 py-3 border border-gray-200 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-300 focus:border-indigo-300 text-sm" %>
      </div>

      <div class="flex items-center justify-between text-sm">
        <div class="flex items-center gap-2">
          <%= f.check_box :remember_me, id: 'remember_me', class: 'h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded' %>
          <label for="remember_me" class="text-sm text-gray-600">Remember me</label>
        </div>

        <div>
          <% if devise_mapping.recoverable? %>
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-indigo-600 hover:underline" %>
          <% end %>
        </div>
      </div>

      <div>
        <%= f.submit "Sign in", class: "w-full inline-flex justify-center items-center px-4 py-3 bg-gradient-to-r from-indigo-600 to-indigo-500 text-white font-semibold rounded-lg shadow hover:from-indigo-700 hover:to-indigo-600 focus:outline-none focus:ring-2 focus:ring-indigo-300" %>
      </div>
    <% end %>

    <div class="mt-6 text-center text-sm text-gray-600">
      <% if devise_mapping.registerable? %>
        <span>Don't have an account?</span>
        <%= link_to "Sign up", new_registration_path(resource_name), class: "text-indigo-600 font-medium hover:underline ml-1" %>
      <% else %>
        <%= link_to "Return to home", root_path, class: "text-indigo-600 font-medium hover:underline" %>
      <% end %>
    </div>

    <%# small legal / footer %>
    <div class="mt-6 text-center text-xs text-gray-400">
      <span>© <%= Time.current.year %> Book Store. All rights reserved.</span>
    </div>
  </div>
</div>
