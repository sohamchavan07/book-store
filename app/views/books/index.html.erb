<div class="min-h-screen bg-gradient-to-b from-slate-900 to-slate-800 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">

    <!-- Header -->
    <div class="text-center mb-12 animate-fade-in">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
        All Books
        <span class="block text-2xl font-normal text-purple-300 mt-2">
          <%= pluralize(@books.count, "book") %> in your collection
        </span>
      </h1>
      
      <!-- Search & Filter Bar -->
      <div class="max-w-2xl mx-auto mt-8">
        <%= form_with url: books_path, method: :get, class: "flex flex-col sm:flex-row gap-4" do %>
          <input type="text" 
                 name="search" 
                 value="<%= params[:search] %>" 
                 placeholder="Search by title, author, or genre..." 
                 class="flex-1 px-6 py-4 rounded-xl bg-white/10 backdrop-blur border border-white/20 text-white placeholder-purple-200 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition">
          
          <button type="submit" 
                  class="px-8 py-4 bg-gradient-to-r from-purple-600 to-purple-700 hover:from-purple-700 hover:to-purple-800 text-white font-semibold rounded-xl shadow-lg hover:shadow-purple-500/50 transform hover:-translate-y-0.5 transition">
            Search
          </button>
        <% end %>
      </div>
    </div>

    <!-- Books Grid -->
    <% if @books.any? %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
        <% @books.each do |book| %>
          <div class="group relative bg-white/5 backdrop-blur-sm rounded-2xl overflow-hidden border border-white/10 shadow-xl hover:shadow-2xl hover:shadow-purple-500/20 transition-all duration-500 transform hover:-translate-y-3">
            
            <!-- Book Cover Placeholder with Gradient + Icon -->
            <div class="aspect-[3/4] relative overflow-hidden bg-gradient-to-br from-purple-600/30 to-blue-600/30">
              <div class="absolute inset-0 flex items-center justify-center">
                <span class="text-8xl opacity-30">Book</span>
              </div>
              <% if book.category %>
                <div class="absolute top-4 left-4">
                  <span class="px-3 py-1 text-xs font-semibold text-purple-100 bg-purple-600/70 backdrop-blur rounded-full">
                    <%= book.category.name %>
                  </span>
                </div>
              <% end %>
            </div>

            <!-- Card Content -->
            <div class="p-6 space-y-4">
              <h3 class="text-xl font-bold text-white line-clamp-2 group-hover:text-purple-300 transition">
                <%= link_to book.title, book, class: "hover:underline" %>
              </h3>
              
              <p class="text-purple-200 text-sm">
                by <span class="font-medium"><%= book.author %></span>
              </p>

              <div class="flex items-center justify-between">
                <div class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-400">
                  â‚¹<%= number_with_precision(book.price, precision: 2) %>
                </div>
                <div class="text-xs text-purple-300">
                  <%= book.published_on&.strftime("%b %Y") || "Unknown" %>
                </div>
              </div>

              <!-- Action Buttons -->
              <div class="flex gap-2 pt-4 border-t border-white/10">
                <%= link_to "View", book, 
                    class: "flex-1 text-center py-3 px-4 bg-gradient-to-r from-purple-600 to-purple-700 hover:from-purple-700 hover:to-purple-800 text-white font-medium rounded-lg transition transform hover:scale-105" %>

                <%= link_to "Edit", edit_book_path(book), 
                    class: "px-4 py-3 bg-white/10 hover:bg-white/20 text-purple-200 font-medium rounded-lg transition" %>

                <%= link_to "Delete", book, 
                    class: "px-4 py-3 bg-red-500/20 hover:bg-red-500/40 text-red-300 font-medium rounded-lg transition",
                    data: { confirm: "Delete '#{book.title}' permanently?" }, 
                    method: :delete %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-20 animate-fade-in">
        <div class="text-9xl mb-8 opacity-20">Book</div>
        <h3 class="text-3xl font-bold text-white mb-4">No books found</h3>
        <p class="text-xl text-purple-300 mb-8">
          <% if params[:search].present? %>
            No results for "<strong><%= params[:search] %></strong>"
          <% else %>
            Your library is empty. Start building your collection!
          <% end %>
        </p>
        <%= link_to "Add Your First Book", new_book_path, 
            class: "inline-flex items-center gap-3 px-8 py-4 bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white text-lg font-bold rounded-xl shadow-2xl hover:shadow-purple-500/50 transform hover:scale-105 transition" %>
      </div>
    <% end %>

    <!-- Add New Book CTA (Sticky Bottom on Mobile) -->
    <div class="fixed bottom-6 right-6 z-10">
      <%= link_to new_book_path, 
          class: "group flex items-center justify-center w-16 h-16 bg-gradient-to-r from-purple-600 to-pink-600 rounded-full shadow-2xl hover:shadow-purple-500/60 transform hover:scale-110 transition-all duration-300",
          title: "Add New Book" do %>
        <span class="text-3xl group-hover:animate-spin-fast">Plus</span>
      <% end %>
    </div>
  </div>
</div>

<style>
  .line-clamp-2 {
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }
  @keyframes spin-fast {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  .animate-spin-fast { animation: spin-fast 0.6s ease-in-out; }
</style>